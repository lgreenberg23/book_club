<% if session[:user_id] == @user.id %>

	<h1><%= "Hello, #{@user.name}!" %></h1>
	<div>
	<ul>
		<li>Email Address: <%= @user.email %></li>
		<li>Book Club Group: <%= link_to @group.name, group_path(@group) %></li>
		<li>Meetings Attended: <%= @user.meetings_attended %></li>
		<% if @user.admin %>
			<li>You are the admin for this group. </li>
		<% end %>
	</ul>
	</div>

	<div>
		<h4>Upcoming Meetings:</h4>
		<ul>
			<% if @meetings != [] %>
				<% @meetings.each do |meeting| %>
				<li><%= link_to meeting.name, meeting_path(meeting) %></li>
				<% end %>
			<% else %>
			You have no upcoming meetings. <%= link_to("Create a Meeting", new_meeting_path, {class: "btn btn-primary btn-sm"}) %>
			<% end %>
		</ul>
	</div>
	<br>

	<%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
	<%= link_to "Delete Account & Become Illiterate", @user, method: :delete, data: { confirm: "Really?" }, class: "btn btn-danger" %>

	<br>

<% else %>
<h3><%= "#{@user.name}'s Profile" %></h3>
<ul>
	<li>Email Address: <%= @user.email %></li>
		<li>Book Club Group: <%= @group.name %></li>
		</ul>
	<%= link_to "Return to your profile", user_path(session[:user_id]) %>
	<%= link_to "Return to your group", group_path(@group) %>

<% end %>