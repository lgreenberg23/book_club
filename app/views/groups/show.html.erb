
<% if @group.id == @user.group_id %>
	<h1><%= @group.name %></h1>


	<table class="table table-striped table-hover ">
	<thead>
	    <tr>
	      <th><h4>Max Number of Members</h4></th>
	      <th><h4>Current Number of Members</h4></th>
	      <th><h4>Frequency of Meeting</h4></th>
	      <th><h4>Preferred Genre</h4></th>
	    </tr>
  	</thead>
	<tbody>
	 <tr>
		<td><h4><%= @group.size %></h4></td>
		<td><h4><%= @group.users.size %></h4></td>
		<td><h4><%= @group.frequency_of_meeting %></h4></td>
		<td><h4><%= @group.genres_read %></h4></td>
		</tr>	
	</tbody>
</table>	<br>
	
	<%= link_to("See all meetings for this group", meetings_path, {class: "btn btn-primary"}) %><br><br>


	<h2>Here are the current members of the group:</h2>
	<table class="table table-striped table-hover ">
		<thead>
		    <tr>
		      <th><h4>Name</h4></th>
		      <th><h4>Email</h4></th>
		      <th><h4>Number of Meetings Attended</h4></th>
		    </tr>
	  	</thead>
		<tbody>
		 <tr>
		 	<% @group_users.each do |user| %>
			<td><h4><%= link_to user.name, user_path(user) %></h4></td>
			<td><h4><%= user.email %></h4></td>
			<td><h4><%= user.meetings_attended %></h4></td>
			</tr>
			<% end %>		
		</tbody>
	</table>	

	<br>
	<% if @user.admin %>
		<div>
			<h4>Admin Abilities:</h4>
			<%= link_to "Edit your group", edit_group_path, class: "btn btn-primary" %>
			<%= link_to "Delete your group", @group, method: :delete, data: { confirm: "Really?" }, class: "btn btn-danger" %>
		</div>
	<% end %>

<% else %>

	<h1>Sorry, you are not a member of this group.</h1>
	<%= link_to("Go to your profile to find your group", user_path(@user), {class: "btn btn-primary"} ) %>
<% end %>
