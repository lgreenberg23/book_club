<h1> Create a new book discussion for your club </h1> 

<% if @user.meetings_attended > 1 || @user.admin %>
	
	<%= form_for @meeting do |f| %>
		Meeting date and Time: <%= f.datetime_field :time %><br>
		Meeting place <%= f.text_field :place %><br>
		Select a book to read: <%= collection_select(:meeting, :book_id, Book.all, :id, :title, prompt: true) %><br> 
		Don't see a book you like? <%= link_to 'Add your book', new_book_path %><br>

		<form class="form-horizontal">
  <fieldset>
    <legend>Create a Book</legend>
    <div class="form-group">
      <label for="<% :title%>" class="col-lg-2 control-label">Title</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="book_email" placeholder="Title" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
      </div>
    </div>
    <div class="form-group">
      <label for="<% :author %>" class="col-lg-2 control-label">Author</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="book_author" placeholder="Author" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
      </div>
    </div>
    <div class="form-group">
      <label for="<% :genre %>" class="col-lg-2 control-label">Genre</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="book_genre" placeholder="Genre" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
      </div>
    </div>
    <div class="form-group">
      <label for="<% :description %>" class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="book_description" placeholder="Description" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
      </div>
    </div>
    <div class="form-group">
      <label for="<% :length_in_pages %>" class="col-lg-2 control-label">Length (in pages)</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="book_length" placeholder="Length (in pages)" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>

	<% end %>
<% else %>

	<div> You have to attend at least 2 meetings before you can create one for your group! Look through a list of available meetings to attend. </div>

	<%= link_to "See all Meetings", meetings_path %>
	

<% end %>